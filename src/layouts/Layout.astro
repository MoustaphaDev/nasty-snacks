---
import { Nav } from "../components/navbar/Nav";
import Socials from "../components/Socials.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/icons/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <header class="sticky top-0">
    <Nav client:idle />
  </header>
  <body>
    <slot />
  </body>
  <footer class="text-center pt-12 pb-4">
    <Socials />
    <p
      class="text-sm pb-4 pt-6 text-transparent hover:text-neutral-100 transition duration-300 ease-in-out"
    >
      <em
        >Made with <a href="https://astro.build" target="_blank"
          ><span class="hover:text-gradient">Astro</span> ðŸš€</a
        >
      </em>
    </p>
  </footer>

  <style is:global>
    @import "../styles/globals.css";
  </style>


</html>
