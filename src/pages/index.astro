---
import { Image, Picture } from "@astrojs/image/components";
import Socials from "../components/Socials.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Nasty Snacks">
  <main>
    <!-- Band info -->
    <section class="mx-auto text-center pt-24" id="band">
      <div
        class="flex lg:flex-row flex-col max-w[850px] text-center lg:justify-center px-4"
      >
        <img src="images/group_photo.jpg" alt="Group Photo" width="500px" />
        <ul class="text-left px-4 child:py-2 child:text-sm">
          <li><em>Drums / Don Allen Jr.</em></li>
          <li><em>Keys / Keith Brooks II</em></li>
          <li><em>Guitar / Colin Fahey</em></li>
          <li><em>Bass / Martin Farrelly</em></li>
          <li><em>Tenor Sax / Alex Francois</em></li>
          <li><em>Guitar / Ryan Gac</em></li>
          <li><em>Trumpet / Scott Hoecker</em></li>
          <li><em>Trombone / Matt Jarosch</em></li>
          <li><em>Trumpet / Caleb Mitchell</em></li>
          <li><em>Vocals / Stefanie Mitchell</em></li>
        </ul>
      </div>
    </section>

    <!-- Music -->
    <section id="music" class="text-center pt-24">
      <h3 class="tracking-wider text-3xl pb-6">MUSIC</h3>
      <div id="player" class="flex lg:flex-row flex-col justify-center gap-8">
        <a
          href="https://open.spotify.com/album/7mLF0VbXdSgJalOclhMAJa?si=jf53fU3zRrSCJAKj0TC-tA"
          target="_blank"
          ><Image
            src="images/smoke_signals.jpg"
            height='450px'
            width="450px"
            alt="Smoke Signals EP Cover"
            format='jpeg'
          />
        </a>

        <iframe
          src="https://open.spotify.com/embed/album/7mLF0VbXdSgJalOclhMAJa?utm_source=generator"
          width="50%"
          height="380"
          allowfullscreen=""
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
        ></iframe>
      </div>
    </section>

    <!-- Upcoming Shows -->
    <section id="tour" class="text-center pt-24">
      <h3 class="tracking-wider text-3xl pb-6">Upcoming Shows</h3>
      <ul class="mx-auto tracking-wider w-fit flex flex-col gap-2 text-left">
        <li>
          <em>
            <strong>FITZGERALDS SIDEBAR, BERWYN, IL</strong> NASTY SNACKS PRESENTS:
            MIDNIGHT SNACKS // EVERY 1st THURSDAY
          </em>
        </li>
        <li>
          <em>
            <strong>MARTYRS, CHICAGO, IL</strong> FRIDAY DECEMBER 09 w/ VICTOR TORRES
            BAND &gt;&gt;
            <a href="http://martyrslive.com/calendar" target="_blank"
              ><strong>TICKETS</strong>
            </a>
          </em>
        </li>
        <li>
          <em>
            <strong>DORIANâ€™S THROUGH THE RECORD SHOP, CHICAGO, IL</strong> THURSDAY
            DECEMBER 29
          </em>
        </li>
      </ul>
    </section>
  </main>
  <footer class="text-center pt-12 pb-4">
    <Socials />
    <p class="text-sm pb-4 pt-6">
      <em
        >Made with <a href="https://astro.build" target="_blank"
          ><span class="text-gradient">Astro</span> ðŸš€</a
        >
      </em>
    </p>
  </footer>
</Layout>
